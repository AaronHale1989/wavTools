<div class="row">
    <div class="col-m-2 col-md-offset-4">
        <h2>Marketplace Samples</h2>
    </div>
</div>

<div class="row">
    <div class="col-m-2 col-md-offset-5">
<% @paids.each do |f| %>
  <div><strong><%= f.user.username %></strong></div>
  <a href="/paids/<%=f.id %>"><%=f.description %></a>
  <div><%= f.created_at.strftime("%Y-%m-%d")%></div>

  <%= link_to like_paid_path(f), method: :put do %>
    <i class="glyphicon glyphicon-thumbs-up"></i>
    <%= f.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_paid_path(f), method: :put do %>
    <i class="glyphicon glyphicon-thumbs-down"></i>
    <%= f.get_downvotes.size %>
  <% end %>
  <hr>
<% end %>
  </div>
</div>
